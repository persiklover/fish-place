{
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		// "eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2020,
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"quotes": [
			"error",
			"single"
		],
		"semi": "error",
		"no-unused-vars": "off",
		"no-duplicate-imports": "warn",
		"comma-dangle": [
			"error",
			"never"
		],
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"no-empty": "warn",
		// Пробел перед круглымы скобками при вызове функции
		"func-call-spacing": [
			"error",
			"never"
		],
		"key-spacing": [
			"error",
			{
				"beforeColon": false,
				"afterColon": true,
				"mode": "minimum"
			}
		],
		// Пробел перед открывающей фигурной скобкой
		"space-before-blocks": "error",
		// TypeScript
		// Разрешает использовать тип `any`
		"@typescript-eslint/no-explicit-any": "off",
		// Разрешает использовать // @ts-ignore
		"@typescript-eslint/ban-ts-comment": "off",
		// Разрешает использовать var package = require(...)
		"@typescript-eslint/no-var-requires": "off",
		// Разрешает ! в конце выражения
		"@typescript-eslint/no-non-null-assertion": "off"
	},
	"globals": {}
}
